resource_name = "Analog"
script/source = "extends Button

var velocity: Vector2

func _ready():
	self.visible = Utils.android_mode

func _input(event):
	if self.button_pressed:
		if event is InputEventScreenDrag:
			velocity = ((event.position - self.global_position) - (self.custom_minimum_size / 2)).normalized()
	else: velocity = Vector2()
"

