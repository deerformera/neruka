[sub_resource type="GDScript" id="GDScript_vggsb"]
resource_name = "Shop"
script/source = "extends PanelContainer

var shop_item = preload(\"res://assets/shop_item.tscn\")
var shop_list: Array

func set_item(val):
	shop_list = val
	$VB/Button.pressed.connect(func(): 
		$VB/VB.get_children().map(func(item): 
			item.queue_free()
			self.hide()))
	
	for list in shop_list:
		var item = shop_item.instantiate()
		item.item = list
		$VB/VB.add_child(item)
	
	self.show()
"

[sub_resource type="GDScript" id="GDScript_7yfqb"]
resource_name = "EquipmentButton"
script/source = "extends CenterContainer

var selected: String = \"\"

func _ready():
	var sub: Array = get_tree().get_nodes_in_group(\"sub\")
	
	$VBoxContainer/HB/Center.button_down.connect(func():
		sub.map(func(node): 
			var equipped_id = Player.equipped[node.name.to_lower()]
			if equipped_id: 
				node.get_node(\"Label\").text = str(equipped_id)
			node.show()))
	$VBoxContainer/HB/Center.button_up.connect(func():
		if selected:
			$\"../Equipment\".activate(selected)
			selected = \"\"
		sub.map(func(node): node.hide()))
	
	sub.map(func(node: Panel):
		node.hide()
		node.mouse_entered.connect(func(): selected = node.name.to_lower())
		node.mouse_exited.connect(func(): selected = \"\")
		)
"

[sub_resource type="GDScript" id="GDScript_c2w07"]
resource_name = "Equipment"
script/source = "extends MarginContainer

func _ready():
	$P/VB/HB/Button.pressed.connect(func(): self.hide())

func activate(type: String):
	$P/VB/M/HB/EquipmentList.get_children().map(func(node): node.queue_free())
	
	self.show()
	$P/VB/HB/Label.text = type
	Player.equipment[type].map(func(id: int):
		var item = load(\"res://assets/equipment_item.tscn\")
		item = item.instantiate()
		item.set_item(type, id)
		$P/VB/M/HB/EquipmentList.add_child(item)
		)
"

