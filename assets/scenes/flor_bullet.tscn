	var cat = get_tree().get_nodes_in_group(\"cat\")[0]
	if cat: dir = (cat.global_position - self.global_position).normalized()
	else: queue_free()

func _physics_process(_delta):
	position += dir * 2
	if position.length() >= 1000:
		self.queue_free()
